            </Image>
            <Label HorizontalTextAlignment="Center" FontSize="Medium">25. detsember 2020 Esimene jõulupüha</Label>
            <Button  Text="View info" BackgroundColor="#FD2196FD" HorizontalOptions="Center" Clicked="ButtonClicked2"/>

            <Image  Source="teinepuha.jpg" Aspect="AspectFit" HeightRequest="150" WidthRequest="150">
            </Image>
            <Label HorizontalTextAlignment="Center" FontSize="Medium">26. detsember 2020	Teine jõulupüha</Label>
            <Button  Text="View info" BackgroundColor="#FD2196FD" HorizontalOptions="Center" Clicked="ButtonClicked3"/>
            
