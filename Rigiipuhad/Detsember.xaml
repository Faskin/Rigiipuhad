    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">

            <Image  Source="jolupaev.jpg" Aspect="AspectFit" HeightRequest="150" WidthRequest="150">
            </Image>
            <Label HorizontalTextAlignment="Center" FontSize="Medium">24. detsember 2020 Jõululaupäev</Label>
